extends layouts/guest_layout 

block content
    .text-center
        .row 
            .col-md-6.offset-md-3 
                h2 Création d'un compte 
                form(action="/register" method="POST")
                    .form-group.mb-2
                        label(for="email") Adresse email
                        input#email.form-control(type="email" name="email" required)
                    .form-group.mb-2
                        label(for="password") Mot de passe
                        input#password.form-control(type="password" name="password" required)
                    .form-group.mb-2
                        a(href="/") Déja un compte? Connectez vous
                    .form-group.mb-2
                        button.btn.btn-primary(type="submit") Créer un compte